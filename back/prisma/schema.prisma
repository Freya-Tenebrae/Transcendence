generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @unique @default(autoincrement())
  email    String  @unique
  admin    Int     @default(0)
  name     String?
  password Pass?
}

model Pass {
  salted_password String?
  salt            String?
  id              Int     @unique
  user            User    @relation(fields: [id], references: [id])
}
